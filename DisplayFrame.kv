Display

<Display>:
    Image:
        id: imageName
        source: root.loadImage()
    BoxLayout:
        orientation: "horizontal"

        GridLayout:
            rows: 3
            size_hint: 1,0.3
            spacing: "5dp"
            Button:
                text: "Red"
                on_press: root.red()
            Button:
                text: "linedrawing"
                on_press: root.line_drawing()
            Button:
                text: "Sepia"
                on_press: root.sepia()
            Button:
                text: "Inverse"
                on_press: root.invert()
            Button:
                text: "Pointilism"
                on_press: root.pointillism()
            TextInput:
                id: textInput
                text: ""
            Button:
                text: "load"
                on_press: root.getImage()